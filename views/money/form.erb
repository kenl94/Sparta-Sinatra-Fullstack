<form class="" action="index.html" method="post">
  <div>
    <label> Title </label>
    <input type="text" name="title" value="<%= @money.currency%>">
  </div>

  <div>
    <label> Body </label>
    <textarea name="body" rows="8" cols="80"><%= @money.money_amount %></textarea>
  </div>

  <div>
    <input type="submit" value="Save Money Data">
  </div>
  <% if(@money.id) %>
    <input type="hidden" name="_method" value="PUT">
  <% end %>
</form>
