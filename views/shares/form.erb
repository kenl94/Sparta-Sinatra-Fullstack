<form class="" action="<%= @shares.id %>" method="post">
  <div>
    <label> Title </label>
    <input type="text" name="title" value="<%= @shares.currency%>">
  </div>

  <div>
    <label> Body </label>
    <textarea name="body" rows="8" cols="80"><%= @moneys.money_amount %></textarea>
  </div>

  <div>
    <input type="submit" value="Save Money Data">
  </div>
  <% if(@shares.id) %>
    <input type="hidden" name="_method" value="PUT">
  <% end %>
</form>
